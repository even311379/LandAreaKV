
<AppContent>:
    map: mapview
    edit_btn: edit_btn
    area_info: area_info

    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1-128/app.device_height)

        FloatLayout:

            MapView:
                id: mapview
                lat: 24.680
                lon: 121.7193
                zoom: 14
                                                

            MDFloatingActionButton:
                id: edit_btn
                icon: "pen-plus"
                md_bg_color: app.theme_cls.primary_color
                pos_hint: {'right':0.98, 'y':0.02}
                on_press: root.toggle_editmode()


            MDLabel:
                id: area_info
                text: ""
                font_style: "H6"
                color: 0.54,0.78,0.12, 1
                # pos_hint: {'left':0.98, 'y':0.02}
                pos_hint: {'center_y': 0.05, 'x': 0.05}
                font_name: "NotoSansCJKtc-DemiLight.otf"
               


